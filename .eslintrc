{
  "extends": [
    "oclif",
    "oclif-typescript"
  ],
  "plugins": ["import"],
  "rules": {
    "semi": ["error", "always"],
    "indent": "off",
    "@typescript-eslint/indent": ["error", 4],
    "unicorn/no-abusive-eslint-disable": "off",
    "unicorn/prefer-module": "off",
    "node/no-missing-import": "off",
    "import/no-unresolved": "error"
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts",
        ".tsx"
      ]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "."
      }
    }
  }
}
